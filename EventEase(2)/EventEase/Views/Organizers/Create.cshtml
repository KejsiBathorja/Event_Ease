@model EventEase.Models.Organizer

@{
    ViewData["Title"] = "Create";
}
<style>
    h1{
        color:white;
        text-align:center;

    }

    .control-label{
        color:white;
    }

</style>
<h1 >Create Organizer</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter organizer's name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter organizer's email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
               

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <br />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
