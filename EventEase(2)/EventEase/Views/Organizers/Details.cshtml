@model EventEase.Models.Organizer

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Center align text and make it white */
    h1, h4, dt, dd {
        color: #fff;
        text-align: center;
    }

    /* Semi-transparent buttons */
    .btn-transparent {
        background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent white */
        border: 1px solid #fff; /* White border */
        color: #fff; /* Text color */
    }

        .btn-transparent:hover {
            background-color: rgba(255, 255, 255, 0.7); /* Lighter semi-transparent white on hover */
            border: 1px solid #fff; /* White border */
            color: #fff; /* Text color */
        }
</style>

<h1>Details of Organizer</h1>

<div class="container">
    <div class="row mt-4">
        <div class="col-sm-12">
            <h4>Organizer Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-sm-12">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-transparent">Edit</a> |
            <a asp-action="Index" class="btn btn-transparent">Back to List</a>
        </div>
    </div>
</div>
