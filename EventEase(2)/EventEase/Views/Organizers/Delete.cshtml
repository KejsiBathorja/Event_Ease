@model EventEase.Models.Organizer

@{
    ViewData["Title"] = "Delete";
}<style>
    h3,h1{
        text-align:center;
        color:thistle;

    }
   

     .btn-secondary {
         background-color: rgba(255, 255, 255, 0.5);
         border: 1px solid #fff; /* White border */
         color: #fff; /* Text color */
     }

         .btn-secondaryt:hover {
             background-color: rgba(255, 255, 255, 0.7); /* Lighter semi-transparent white on hover */
             border: 1px solid #fff; /* White border */
             color: #fff; /* Text color */
         }

     .btn-transparent {
    background-color: rgba(255, 255, 255, 0.5); 
    border: 1px solid #fff; /* White border */
    color: #fff; /* Text color */
    }

    .btn-transparent:hover {
    background-color: rgba(255, 255, 255, 0.7); /* Lighter semi-transparent white on hover */
    border: 1px solid #fff; /* White border */
    color: #fff; /* Text color */
    }

     .col-sm-2{
         color:thistle;
     }

     .col-sm-10{
         color:thistle;
     }
</style>

<h1>Delete Organizer</h1>

<div class="container">
    <h3>Are you sure you want to delete this organizer?</h3>

    <div class="row mt-4">
        <div class="col-sm-12">
            <h3>Organizer Details</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" >Name:</dt>
                <dd class="col-sm-10" >@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-transparent">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
