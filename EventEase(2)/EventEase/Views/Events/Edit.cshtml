@model EventEase.Models.Event

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @{
        ViewData["Title"] = "Edit";
    }
    <!-- Lidhja me skedarin CSS -->
    <link rel="stylesheet" href="~/css/revieww.css">

</head>

<body>
<h1 class="styled-head">Edit</h1>

<h4 class="styled-head">Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group styled-input">
                <label asp-for="Name" class="control-label styled-label"></label>
                <input asp-for="Name" class="form-control styled-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group styled-input">
                <label asp-for="Location" class="control-label styled-label"></label>
                <input asp-for="Location" class="form-control styled-input" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group styled-input">
                <label asp-for="Discription" class="control-label styled-label"></label>
                <input asp-for="Discription" class="form-control styled-input" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group styled-input">
                <label asp-for="Date" class="control-label styled-label"></label>
                <input asp-for="Date" class="form-control styled-input" value="@Model.Date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group styled-input">
                <label asp-for="CategoryId" class="control-label styled-label"></label>
                <select asp-for="CategoryId" class="form-control styled-input" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group styled-input">
                <label asp-for="OrganizerId" class="control-label styled-label"></label>
                <select asp-for="OrganizerId" class="form-control styled-input" asp-items="ViewBag.OrganizerId"></select>
                <span asp-validation-for="OrganizerId" class="text-danger"></span>
            </div>
            <div class="form-group styled-input">
                <label class="control-label styled-label">Image</label>
                <input id="ImageFile" type="file" name="ImageFile" class="styled-input" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="styled-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="styled-label">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</body>
</html>