@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: white;">Index</h1>

<p>
    <a asp-action="Create" style="color: white;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color: darkslateblue; color: white;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizerId)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color: white;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="color: white;">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td style="color: white;">
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>
                <td style="color: white;">
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td style="color: white;">
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td style="color: white;">
                    @Html.DisplayFor(modelItem => item.OrganizerId)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="~/images/@item.Image" alt="Event Image" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <p style="color: white;">No image available</p>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: white;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color: white;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color: white;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
