@model EventEase.Models.UserDetailsViewModel
<style>
    .py-2{
        margin-left:30px;
    }
    .btn-secondary{
        background-color: rgba(255, 255, 255, 0.7); /* Lighter semi-transparent white on hover */
        border: 1px solid #fff; /* White border */
        color: #fff; /* Text color */
        margin-left:18px;
        margin-top:8px;


    }

    .btn-primary{
        background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent white */
        border: 1px solid #fff; /* White border */
        color: #fff; /* Text color */
        margin-left: 18px;
        margin-top:18px;
    }

    .btn-primary:hover {
            background-color: rgba(255, 0, 0, 0.5);
   
            border-color: white;
            border: 1px solid #fff; /* White border */
        color: thistle;
    
    }

    .container{
       
        width: 100%;
        padding: .375rem .75rem;
      
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: rgba(255, 192, 203, 0.5);
        background-clip: padding-box;
        border: 1px solid #ced4da;
        padding-bottom:20px;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }
</style>

<form method="post" asp-controller="RoleAdmin" asp-action="CreateUserRole" asp-route-Id= class="@Model.Id">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
    <div class="form-group ">
        <label>Email:</label>
        <input asp-for="Email" readonly="readonly" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    </div>
    <div class="py-2">
        <button type="submit" class="btn-primary">Submit</button>
        <br />
        <a class="btn-secondary" asp-controller="Admin" asp-action="Index">Back</a>
    </div>
    
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
