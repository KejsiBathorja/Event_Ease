@model EventEase.Models.Category

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Center align text and make it white */
    h1, h4, dt, dd {
        color: #fff;
        text-align: center;
    }
    /* Define styles for headings */
    h1, h4 {
        color: white;
        display: inline-block; /* Ensures headings stay on the same line */
        text-align:center;
    }

    /* Semi-transparent buttons */
    .btn-transparent {
        background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent white */
        border: 1px solid #fff; /* White border */
        color: #fff; /* Text color */
        margin-top: 20px; /* Add margin to top */
        padding: 10px 20px; /* Padding for button */
        border-radius: 5px; /* Rounded corners */
        display: inline-block; /* Display as inline block */
        text-decoration: none; /* Remove underline */
    }

        .btn-transparent:hover {
            background-color: rgba(255, 255, 255, 0.7); /* Lighter semi-transparent white on hover */
        }
</style>

<h1>Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h4>Category</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-transparent">Edit</a>
                <a asp-action="Index" class="btn btn-transparent">Back to List</a>
            </div>
        </div>
    </div>
</div>
